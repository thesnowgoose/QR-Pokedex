<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lcarrasco.pokedex.InfoFragment"
    android:foregroundGravity="center_horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/readme1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/readme1"
                android:textSize="18sp"
                android:layout_margin="10dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qrcodeexample"
                android:layout_gravity="center_horizontal"
                android:contentDescription="QR example"/>
            <TextView
                android:id="@+id/readme2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/readme2"
                android:textSize="18sp"
                android:layout_margin="10dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
